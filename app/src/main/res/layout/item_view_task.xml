<?xml version="1.0" encoding="utf-8"?>
<com.xebialabs.xlrelease.ui.tasks.list.TaskView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/instance_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/task_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_complete"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:background="@color/item_complete"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_complete"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/item_complete"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                tools:text="Task name" />

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>
</com.xebialabs.xlrelease.ui.tasks.list.TaskView>